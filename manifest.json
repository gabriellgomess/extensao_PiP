{
    "manifest_version": 2,
    "name": "Picture-in-Picture by Gabriel",
    "version": "2.0",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/icon.png"
        
    }
}